{
  "name": "openshift-actions-connector",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-actions/openshift-actions-connector"
  },
  "engines": {
    "node": ">= 14"
  },
  "homepage": "/",
  "scripts": {
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "webpack": "export WEBPACK_PACKAGE=webpack5; yarn ts-node ./node_modules/.bin/webpack-cli",
    "wds": "export WEBPACK_PACKAGE=webpack5; yarn ts-node ./node_modules/.bin/webpack-cli serve",
    "ts-node": "ts-node -O '{ \"module\": \"commonjs\" }'",
    "clean": "rm -rf build/",
    "dev:client": "react-scripts start",
    "dev:plugin:webpack": "yarn wds --config webpack.config.plugin.ts --mode=development",
    "dev:plugin": "concurrently -k -p name -c 'magenta,magenta,yellow' -n 'server,server,plugin' 'yarn dev:server:webpack' 'yarn dev:server:nodemon' 'yarn dev:plugin:webpack'",
    "dev:server:webpack": "yarn webpack --config webpack.config.server.ts --watch --mode=development",
    "dev:server:nodemon": "rm -f dist/server/server.js && wait-on -l dist/server/server.js && nodemon --inspect dist/server/server.js",
    "dev:server": "concurrently -k -p name -c 'magenta,magenta' -n 'server,server' 'yarn dev:server:webpack' 'yarn dev:server:nodemon'",
    "dev": "concurrently -k -p name -c 'magenta,magenta,cyan' -n 'server,server,client' 'yarn dev:server:webpack' 'yarn dev:server:nodemon' 'yarn dev:client'",
    "dev:all": "concurrently -k -p name -c 'magenta,magenta,cyan,yellow' -n 'server,server,client,plugin' 'yarn dev:server:webpack' 'yarn dev:server:nodemon' 'yarn dev:client' 'yarn:dev:plugin:webpack'",
    "build:client": "react-scripts build",
    "build:server": "yarn webpack --config webpack.config.server.ts --mode=production",
    "build:plugin": "yarn webpack --config webpack.config.plugin.ts --mode=production",
    "build": "yarn clean && concurrently --kill-others-on-fail -p name -c 'cyan,magenta,yellow' -n 'client,server,plugin', 'yarn build:client' 'yarn build:server' 'yarn build:plugin'",
    "container-build": "buildah bud --layers -f containerize/Containerfile --build-arg VCS_REF=$(git rev-parse HEAD | cut -c -7) -t openshift-actions-connector:latest .",
    "container-build:dev": "buildah bud --layers -f containerize/dev/Containerfile.dev -t openshift-actions-connector-dev:latest",
    "container-run": "podman run --rm --name openshift-actions-connector -p 3003:3003 openshift-actions-connector:latest",
    "container-run-d": "podman run -d --rm --name openshift-actions-connector -p 3003:3003 openshift-actions-connector:latest",
    "container-tag": "export TAG=quay.io/tetchell/openshift-actions-connector:latest && buildah tag openshift-actions-connector:latest $TAG",
    "container-push": "export TAG=quay.io/tetchell/openshift-actions-connector:latest && buildah push $TAG",
    "container-e2e": "yarn container-build && yarn container-tag && yarn container-push",
    "helm-install": "export RELEASE_NAME=actions-connector && helm upgrade --install $RELEASE_NAME containerize/chart/openshift-actions-connector --set clusterApiServer=$(oc whoami --show-server)"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.14.0",
    "@octokit/auth-app": "^3.4.0",
    "@octokit/core": "^3.4.0",
    "@octokit/plugin-paginate-rest": "^2.13.3",
    "@patternfly/patternfly": "^4.103.6",
    "@patternfly/react-core": "^4.121.1",
    "@patternfly/react-icons": "^4.10.7",
    "@patternfly/react-table": "^4.27.7",
    "bootstrap": "^4",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.1",
    "http-proxy-middleware": "^1.1.0",
    "http-status-codes": "^2.1.4",
    "jquery": "^3.6.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "node-fetch": "^2.6.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "sass": "~1.32.10",
    "serve": "^11.3.2",
    "session-file-store": "^1.5.0",
    "source-map-support": "^0.5.19",
    "tweetsodium": "^0.0.5",
    "uuid": "^8.3.2",
    "web-vitals": "^1.1.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@redhat-actions/eslint-config": "^1.3.1",
    "@tetchel/dynamic-plugin-sdk": "^0.0.0-alpha24",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/node": "14",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/session-file-store": "^1.2.1",
    "@types/uid-safe": "^2.1.2",
    "@types/uuid": "^8.3.0",
    "@types/webpack-dev-server": "^3.11.4",
    "@types/webpack-node-externals": "^2.5.1",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "concurrently": "^6.2.0",
    "css-loader": "^5.2.4",
    "encoding": "^0.1.13",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "nodemon": "^2.0.7",
    "null-loader": "^4.0.1",
    "react-scripts": "^4.0.3",
    "sass-loader": "^12.0.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2",
    "url-loader": "^4.1.1",
    "wait-on": "^5.3.0",
    "webpack": "~4.44",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^3.0.0",
    "webpack5": "npm:webpack@5.0.0-beta.16"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "consolePlugin": {
    "name": "github-connector",
    "version": "0.1.0",
    "displayName": "OpenShift GitHub Connector",
    "description": "Connect your OpenShift cluster to GitHub to enable integrations",
    "exposedModules": {
      "app": "./src/client/app.tsx"
    },
    "dependencies": {
      "@console/pluginAPI": "*"
    }
  }
}
