{
  "name": "openshift-actions-connector",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-actions/openshift-actions-connector"
  },
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev:client": "wait-on -l tcp:3003 && react-scripts start",
    "dev:server": "concurrently -p name -c 'yellow,magenta' -n 'webpack,srv' 'yarn dev:server:webpack' 'yarn dev:server:nodemon'",
    "dev:server:webpack": "export WEBPACK_PACKAGE=webpack5; ts-node -O '{ \"module\": \"commonjs\" }' ./node_modules/.bin/webpack-cli --config webpack.config.server.ts --watch --mode=development",
    "dev:server:nodemon": "rm -f build/server.js && wait-on -l build/server.js && nodemon --inspect build/server.js",
    "dev": "concurrently -p name -c 'yellow,magenta,cyan' -n 'webpack,srv,ui' 'yarn dev:server:webpack' 'yarn dev:server:nodemon' 'yarn dev:client'",
    "build:client": "react-scripts build",
    "build:server": "export WEBPACK_PACKAGE=webpack5; ts-node -O '{ \"module\": \"commonjs\" }' ./node_modules/.bin/webpack-cli --config webpack.config.server.ts --mode=production",
    "build": "yarn build:client && yarn build:server",
    "container-build": "buildah bud --layers -f containerize/Containerfile --build-arg VCS_REF=$(git rev-parse HEAD | cut -c -7) -t openshift-actions-connector:latest .",
    "container-build:dev": "buildah bud --layers -f containerize/dev/Containerfile.dev -t openshift-actions-connector-dev:latest",
    "container-run": "podman run --rm --name openshift-actions-connector -p 3000:3000 -p 3003:3003 openshift-actions-connector:latest",
    "container-run-d": "podman run -d --rm --name openshift-actions-connector -p 3000:3000 -p 3003:3003 openshift-actions-connector:latest",
    "container-tag": "export TAG=quay.io/tetchell/openshift-actions-connector:latest && buildah tag openshift-actions-connector:latest $TAG",
    "container-push": "export TAG=quay.io/tetchell/openshift-actions-connector:latest && buildah push $TAG",
    "container-e2e": "yarn container-build && yarn container-tag && yarn container-push",
    "helm-install": "export RELEASE_NAME=actions-connector && helm upgrade --install $RELEASE_NAME containerize/chart/openshift-actions-connector",
    "depr-docker-build:client": "docker build . -f containerize/Containerfile.client -t openshift-actions-connector-client:latest",
    "depr-docker-build:server": "docker build . -f containerize/Containerfile.server -t openshift-actions-connector-server:latest",
    "depr-docker-build": "concurrently -p name -c 'cyan,yellow' -n 'client,server' 'yarn docker-build:client' 'yarn docker-build:server'",
    "dept-docker-run": "concurrently -p name -c 'cyan,yellow' -n 'ui,srv' 'yarn docker-run:client' 'yarn docker-run:server'"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.34",
    "@fortawesome/free-brands-svg-icons": "^5.15.2",
    "@fortawesome/free-solid-svg-icons": "^5.15.2",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@kubernetes/client-node": "^0.16.1",
    "@octokit/auth-app": "^3.4.0",
    "@octokit/core": "^3.4.0",
    "@octokit/plugin-paginate-rest": "^2.13.3",
    "bootstrap": "^4.6.0",
    "classnames": "^2.3.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-session": "^1.17.1",
    "http-proxy-middleware": "^1.1.0",
    "http-status-codes": "^2.1.4",
    "jquery": "^3.6.0",
    "jsonwebtoken": "^8.5.1",
    "log4js": "^6.3.0",
    "node-fetch": "^2.6.1",
    "popper.js": "1",
    "react": "^17.0.1",
    "react-bootstrap": "^1.5.2",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "sass": "^1.32.10",
    "serve": "^11.3.2",
    "session-file-store": "^1.5.0",
    "source-map-support": "^0.5.19",
    "tweetsodium": "^0.0.5",
    "uuid": "^8.3.2",
    "web-vitals": "^1.1.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@redhat-actions/eslint-config": "^1.3.1",
    "@types/bootstrap": "^5.0.12",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/node": "14",
    "@types/node-fetch": "^2.5.8",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/session-file-store": "^1.2.1",
    "@types/uid-safe": "^2.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-react": "^7.22.0",
    "nodemon": "^2.0.7",
    "react-scripts": "^4.0.3",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "wait-on": "^5.3.0",
    "webpack": "~4.44",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^3.0.0",
    "webpack5": "npm:webpack@^5.37.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
